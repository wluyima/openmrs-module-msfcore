	<changeSet id="20180724-1119" author="k-joseph">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM
				scheduler_task_config
				WHERE schedulable_class =
				'org.openmrs.module.msfcore.tasks.AuditLogDeletionScheduler'
			</sqlCheck>
		</preConditions>
		<comment>Inserting Auto Deletion of outdated audit logs task into 'schedule_task_config' table</comment>
		<insert tableName="scheduler_task_config">
			<column name="name" value="Clear OutDated Audit Logs" />
			<column name="description"
				value="Deletes outdated audit logs basing on Global property: msfcore.daysToKeepLogs" />
			<column name="schedulable_class"
				value="org.openmrs.module.msfcore.tasks.AuditLogDeletionScheduler" />
			<column name="start_time_pattern" value="MM/dd/yyyy HH:mm:ss" />
			<column name="start_time" valueDate="2018-07-24T13:30:59" />
			<column name="start_on_startup" valueNumeric="1" />
			<column name="repeat_interval" value="86400" />
			<column name="date_created" valueDate="CURRENT_TIMESTAMP" />
			<column name="created_by" value="1" />
			<column name="uuid"
				value="8defc5be-8f1b-11e8-9eb6-529269fb1459" />
		</insert>
	</changeSet>
	<changeSet id="20180724-1551" author="k-joseph">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="msfcore_audit_log" />
			</not>
		</preConditions>
		<comment>
			Create msfcore_audit_log table
		</comment>
		<createTable tableName="msfcore_audit_log">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="date" type="datetime">
				<constraints nullable="false" />
			</column>
			<column name="detail" type="text">
				<constraints nullable="false" />
			</column>
			<column name="event" type="varchar(255)">
				<constraints nullable="false" />
			</column>
			<column name="user_id" type="int" />
			<column name="patient_id" type="int" />
			<column name="provider_id" type="int" />
			<column name="location_id" type="int" />
			<column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint
			constraintName="msfcore_audit_log_user_fk"
			baseTableName="msfcore_audit_log" baseColumnNames="user_id"
			referencedTableName="users" referencedColumnNames="user_id" />
		<addForeignKeyConstraint
			constraintName="msfcore_audit_log_patient_fk"
			baseTableName="msfcore_audit_log" baseColumnNames="patient_id"
			referencedTableName="patient" referencedColumnNames="patient_id" />
		<addForeignKeyConstraint
			constraintName="msfcore_audit_log_provider_fk"
			baseTableName="msfcore_audit_log" baseColumnNames="provider_id"
			referencedTableName="provider" referencedColumnNames="provider_id" />
		<addForeignKeyConstraint
			constraintName="msfcore_audit_log_location_fk"
			baseTableName="msfcore_audit_log" baseColumnNames="location_id"
			referencedTableName="location" referencedColumnNames="location_id" />
	</changeSet>

